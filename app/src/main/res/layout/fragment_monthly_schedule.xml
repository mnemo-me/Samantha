<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.month_schedule.MonthlyScheduleFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/monthly_schedule_header"
            android:id="@+id/month_schedule_header"/>

        <GridView
            android:id="@+id/month_schedule_schedule"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/month_schedule_header"
            android:layout_marginStart="@dimen/default_padding"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="@dimen/default_padding"
            android:verticalSpacing="@dimen/quarter_padding"
            android:horizontalSpacing="@dimen/quarter_padding"
            android:numColumns="7"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
